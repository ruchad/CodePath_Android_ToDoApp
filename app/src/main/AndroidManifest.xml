<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="codepathapplication.ruchad.todo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.ToDoMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.ToDoAddActivity"
            android:label="Add">
        </activity>

        <activity android:name=".activities.ToDoDetailActivity"
            android:label="Details">
        </activity>

        <activity android:name=".activities.ToDoEditActivity"
            android:label="Edit">
        </activity>

        <activity android:name=".activities.SettingsActivity"
            android:label="Settings"
            android:theme="@style/SettingsTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ToDoMainActivity"/>
        </activity>

        <provider
            android:authorities="codepathapplication.ruchad"
            android:name=".data.ToDoProvider"
            android:exported="false"
            android:syncable="true"/>

        <receiver android:process=":remote"
            android:name=".receivers.ReminderAlarmService">
        </receiver>

    </application>

</manifest>
